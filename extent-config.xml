<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
  <configuration>
    <!-- report theme -->
    <!-- standard, dark -->
    <theme>dark</theme>
  
    <!-- document encoding -->
    <!-- defaults to UTF-8 -->
    <encoding>UTF-8</encoding>
    
    <!-- protocol for script and stylesheets -->
    <!-- defaults to https -->
    <protocol>https</protocol>
    
    <!-- title of the document -->
    <documentTitle>Automation Report</documentTitle>
    
    <!-- report name - displayed at top-nav -->
    <reportName></reportName>
    
    <!-- report headline - displayed at top-nav, after reportHeadline -->
    <reportHeadline>Hybrid Automation Report</reportHeadline>
    
    <!-- global date format override -->
    <!-- defaults to yyyy-MM-dd -->
    <dateFormat>dd-MM-yyyy</dateFormat>
    
    <!-- global time format override -->
    <!-- defaults to HH:mm:ss -->
    <timeFormat>HH:mm:ss</timeFormat>
    
    <!--  report name - displayed at top -nav -->
    <reportName>
    <image id = "image-zoom">
    <![CDATA[
    <img src = 'D://EclipseWorkSpace//westpac//src//main//resources//companylogo//westpac.png', height = 45, width = 100/>
    ]]>
    </image>
    </reportName>
    
    <!-- custom javascript -->
    <scripts>
      <![CDATA[
        $(document).ready(function() {
          $("#image-zoom").src("src",src);
          $("#image-zoom").append("src",src);
        });
      ]]>
    </scripts>
    
    <!-- custom styles -->
    <styles>
      <![CDATA[
        .report-name {padding-left : 3%;}.report-name>img{float:left ; height:45 ; margin-left:2px ; margin-top:1px ; margin-bottom:-10px ; margin-right:5px ; width:100 ;}
      ]]>
    </styles>
  </configuration>
</extentreports>